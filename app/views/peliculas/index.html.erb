       <% @peliculas.each do |peli| %>
          <tr>
            <td><%= peli.id  %> </td>
            <td>
              <%= peli.name %>
            </td>
             <td>
              <%= peli.stars %>
            </td>
             <td>
              <%= peli.main_actor %>
            </td>
            <td>
