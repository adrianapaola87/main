



<h2>New Settigns</h2>

<% if @setting.errors.any? %>
  <% @setting.errors.full_messages.each do |msg| %>
    <!-- <div class="alert alert-danger"><%= msg %></div> -->
    <p hidden><%= flash[:alert] = msg %></p>
    <%if flash.present?%>
      <div class="row">
          <div class="col-sm-12 col-md-6 col-md-offset-3" style="padding: 0 0">
              <%= render partial: "shared/flash_messages_fix", flash: flash %>
          </div>
      </div>
    <%end%>       
  <% end %>
<% end %>

