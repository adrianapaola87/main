<div class="controladorej2">


<div class="row">
  <div class="box">
      <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Mostrar Countrie</div>
       <%= form_for(@countrie) do |f| %>
         <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Id:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @countrie.id %>">
              </div>
        </div> <!-- end field -->
        <div class="field">
           <label class="control-label col-sm-2 col-lg-2">Nombre:</label>
              <div class="col-sm-10 col-lg-10">
                <input type="text" class="form-control" value="<%= @countrie.name %>">
              </div>
        </div> <!-- end field -->
      <div class="row">
        <div class="col-lg-12">
          <br/>
       <%= link_to 'Back', countries_path, class:"btn btn-sm btn-success pull-right", style:"margin-right: 15px;" %>
     </div>
      </div> <!-- end field -->
  </div> <!-- end box -->
   
  <div class="margin20">  
    <%= @countrie.errors.full_messages.each do |message| %>
        <div class="be-red white top-space text-center">
          * <%= message %>
        </div>
    <% end %>
  </div>

</div> <!-- end row -->

</div>  <!-- end controladorej2 -->

