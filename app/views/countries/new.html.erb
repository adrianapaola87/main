<div class="controladorej2">

<div class="box">
    <div class="alert"><i class="fa fa-th-large fa-1x color-blue"></i>&nbsp;Crear Countrie</div> 
        <%= form_for(@countrie) do |f| %>
        <div class="field">
            <%= f.text_field :name, placeholder: "Nombre", class:"form-control" %>
        </div> 
        
        <div class="field">
            <%= f.submit "Guardar", class:"btn btn-sm btn-danger white pull-right", style:"margin-top: 15px;" %>
        </div>
    <% end %>
    <%= link_to 'Listado de Countries', @countrie, class:"btn btn-sm btn-primary", style:"margin-top: 15px;" %> 
  <br></br> 
  <ol>
    <li>El nombre no puede estar vacio.</li>
    <li>No permite guardar 2 nombres en la BD con el mismo nombre.</li>
    
  </ol>  
</div> <!-- end box -->

<div class="row">
     <div class="margin20">
        <%= @countrie.errors.full_messages.each do |message| %>
            <div class="message be-red white top-space text-center">
                * <%= message %>
            </div>
        <% end %>
    </div>        
</div> <!-- end row -->


</div> <!-- end controladorej2 -->

